.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
} 

button {
  background: initial;
}

button:focus{
  outline: 0;
}

button::after{
  border: none;
}


page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  font-family: Helvetica Neue, Helvetica, sans-serif;
}

/* 深夜模式 */

@media (prefers-color-scheme: dark) {
  Page,
  page{
    min-height: 100vh;
    filter: invert(90%) !important;
    background-color: rgb(25, 25, 25) !important;
    color: rgb(25, 25, 25) ; 
  }
  .ad{
    filter: invert(90%) !important;
  }
  
  button,
  switch,
  scroll-view,
  image{
    filter: invert(90%) !important;
  }

  .data-score {
    filter: invert(90%) !important;
  }
  .dot{
    filter: invert(90%) !important;
  }
  .head-title{
    filter: invert(40%) !important;
  }

}



