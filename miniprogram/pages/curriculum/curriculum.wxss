
page {
  background-color: rgb(255, 255, 255);
}

/* 头部 */
.nav-head {
  display: flex;
  position:fixed;
  width: 100%;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  height: 5%;
  z-index: 10000;
  border-bottom: 0.5rpx solid #cacbcc;
  background-color: #fff;
}
.img-button {
  display: inline-block;
}
.img-button image {
  margin-top: 10%;
  width: 80%;
  height: 80%;
}
.week-selector {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: 300rpx;
}
.ttt{
  font-size: 35rpx;
}
.add-course-btn {
  width: 52rpx;
  height: 52rpx;
  margin-left: 20rpx;
}
.pre-week-btn {
  width: 30rpx;
  height: 39rpx;
}
.cur-week {
  text-align: center;
  line-height: 1.5;
}
.cur-week .week {
  font-size: 38rpx;
  color: #18191A;
}
.cur-week .title {
  font-size: 28rpx;
  color: #7A7D80;
  max-width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
}
.next-week-btn {
  width: 30rpx;
  height: 39rpx;
}
.feedback-btn {
  width: 50rpx;
  height: 48rpx;
  margin-right: 20rpx;
}

/*-----------------------------遮罩层样式-------------------------------------  */
.shade {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 102;
  background-color: rgba(0, 0, 0, 0.8);
  opacity: 0.5;
  overflow: hidden;
}

/*----------------------------面板样式-----------------------------------------  */
.cont {
  width: 600rpx;
  height: 400rpx;
  z-index: 103;
  overflow: hidden;
  position: fixed;
  top: 20%;
  left: 60rpx;
  font-size: 32rpx;
  border-radius: 10rpx;
  border: 1rpx solid greenyellow;
  background-color: white;
}


/* 滑块 */
.scroll {
  /* height: 1300rpx; */
  /* z-index: 9999999; */
  /* height: 100%; */
  position: absolute;
  top:5%;
}

/* 星期 */
.top {
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  padding-top:3rpx;
  width: 100%;
  border-bottom: 1rpx solid rgba(240,240,240,0.5);
}
.week {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 50rpx;
  font-size: 9pt;
}
.after-left {
  text-align: center;
  font-size: 8.5pt;
  justify-content: center;
  align-items: center;
  color: #aaa;
}
.after-left-strong {
  color: #73b4ef;
  font-weight: bold;
}
.top-text {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align: center;
  flex-grow: 1;
  width: 100rpx;
  height: 75rpx;
  font-size: 11pt;
  color: #4d4d4d;
}
.top-text-strong {
  color: #73b4ef;
  font-weight: bold;
}


/* 时间表 */
.timetable {
  position: relative;
  display: flex;
  height: 1200rpx;
  width: 100%;
}
.left {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align: center;
  width: 50rpx;
  height: 110rpx;
  font-size: 12pt;
  color: #4d4d4d;
}
.after-left1 {
  text-align: center;
  font-size: 7pt;
  justify-content: center;
  align-items: center;
  color: #aaa;
}


/* 课表 */
.kbcontain{
  position: relative;
}
.kb{
  position: absolute;
  width: 96rpx;
  margin: 4rpx 2rpx 2rpx 2rpx;

  display: flex;
  align-items: center;

  border-radius: 5px;
}
.smalltext {    
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  font-size: 80%;
  color: #fff;
  padding: 0 10rpx;
}


/* 没课 */
.wx-isclass {
  width: 730rpx;
  text-align: center;
  font-size: 40rpx;
  color: #1cbbb4;
  margin-top: 20rpx;
}
.pd2 {
  justify-content: space-between;
  height: 100%;
  padding: 88% 0;
  box-sizing: border-box;
}