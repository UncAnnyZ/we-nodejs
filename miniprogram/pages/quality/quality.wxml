<import src="../../template/template.wxml"></import>
<view class="head wx-head" wx:if="{{list.length != 0}}">
  <view class="head-time">
    <view class="weui-input">你的素拓分哟！</view>
  </view>
  <view class="head-title" style='color:coral'>
    <text>素拓分:{{TotalCredit}}</text>
  </view>
</view>
<view class="main">
  <view class='wx-isclass' wx:if="{{list.length == 0}}">木有素拓哟</view>
  <view class="list">
    <block wx:key="id" wx:for="{{list}}">

      <template is="card"
        data="{{line: false, color: color[index], index: index, title: item.ktmc, score: item.hdxf, text: [item.xmjbmc, '状态:'+item.shztmc]}}">
      </template>

    </block>
  </view>
  <text>\n</text>
</view>