/* pages/schoolNav/schoolNav.wxss */
@import "weui.wxss";
.controls {
  position: relative;
  top: 70%;
  left: 85%;
  /* display: flex; */
}

.controls .img {
  margin-top: 5px;
  width: 80rpx;
  height: 80rpx;
}
.remind-box {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.full {
  top: 82%;
}
.flex-style {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}

.flex-item {
  height: 35px;
  line-height: 35px;
  text-align: center;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
}

.flex-item.active {
  color: #0091ff;
}

.map_box {
  position: absolute;
  top: 0px;
  bottom: 130px;
  left: 0px;
  right: 0px;
}

#navi_map {
  width: 100%;
  height: 100%;
}

.text_box {
  position: absolute;
  height: 130px;
  bottom: 0px;
  left: 0px;
  right: 0px;
}

.text_box .text {
  margin: 15px;
}

.detail_button {
  position: absolute;
  bottom: 50px;
  right: 10px;
  padding: 3px 5px;
  color: #fff;
  background: #0091ff;
  width: 50px;
  text-align: center;
  border-radius: 5px;
}

@media (prefers-color-scheme: dark) {
  .map_box {
    filter: invert(80%) !important;
  }

}