@import"../weui.wxss";
view, text, scroll-view, swiper, button, form, input, textarea, label, image {
  box-sizing: content-box;
}
button{
  box-sizing: border-box;
}
page {
  background-color:rgb(226, 240, 243);
  font-size: 16px;
  font-family: unset;
 
}

.all{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
}
.course{
  display: flex;
  flex-direction: row;
  align-content: center;
  width:85%;
  padding:20rpx;
  margin:20rpx;
  border-radius: 20rpx;
  box-sizing: unset;
  background-color: rgb(255, 255, 255);
}
.course label{
  display: flex;
  align-items: center;
  padding-right: 30rpx;
}
.course input{
  font-size: 1.1rem;
  padding: 0.3rem;
  width: 250rpx;
}
.section{
  margin:20rpx;
  padding:20rpx;
  width:85%;
  border-radius: 20rpx;
  background-color: rgb(255, 255, 255);
}
.submit{
  width: 100%;
  padding-top: 50rpx;
}
.submit button{
  width: 100%;
  border-radius: 30rpx;
  box-shadow:0px 0px 4px 0px #c7c7c7;
  background-color: rgb(255, 255, 255);
  color: rgb(0, 0, 0);
  font-size: 15px;        /* 字体大小 */
  letter-spacing: 5rpx;   /* 字间距 */
}




@media (prefers-color-scheme: dark) {
  .course{
    display: flex;
    flex-direction: row;
    align-content: center;
    width:85%;
    padding:20rpx;
    margin:20rpx;
    border-radius: 20rpx;
    box-sizing: unset;
    background-color: rgb(233, 233, 233);
    box-shadow: 0rpx 0rpx 17rpx #e2e2e2
  }
  
  .section{
    margin:20rpx;
    padding:20rpx;
    width:85%;
    border-radius: 20rpx;
    background-color: rgb(233, 233, 233);
    box-shadow: 0rpx 0rpx 17rpx #e2e2e2
  }
  .submit{
    width: 100%;
    padding-top: 50rpx;
  }
  .submit button{
    width: 100%;
    border-radius: 30rpx;
    box-shadow: 0rpx 0rpx 17rpx #e2e2e2;
    background-color: rgb(233, 233, 233);
    color: rgb(0, 0, 0);
    font-size: 15px;        /* 字体大小 */
    letter-spacing: 5rpx;   /* 字间距 */
  }

}