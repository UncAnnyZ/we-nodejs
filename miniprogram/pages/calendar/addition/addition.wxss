
button{
  box-sizing: border-box;
}
page {
  background-color:#bddff848;
  font-size: 16px;
  font-family: unset;
 
}
.background{
  width:100%;
  height:100%;
  position: fixed;
  background-size:100% 100%;
  z-index: -1;
}

.all{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 230rpx;
}
.flex-item{
  width:85%;
  height:480rpx;
  background-color:rgb(255, 255, 255);
  border-radius: 13rpx;
  box-shadow: 7rpx 7rpx 7rpx #969696b4;
  overflow: hidden;
}
.flex-item_title{
  background-color:rgba(76, 126, 202, 0.945)!important;
  height:105rpx;
  display: flex;
  justify-content:center ;
  align-items: center;
  font-size: 38rpx;
  font-weight: 550;
  color:rgb(255, 255, 255);
}
.flex-item_gapDays{
  background-color: white;
  height:270rpx;
  padding-top: 8rpx;
  font-weight: 550;
  font-family: '华文新魏';
  display: flex;
  justify-content:center ;
  align-items: center;
  font-size: 160rpx;
}


.flex-item_desc{
  height:90rpx;
  font-size: 33rpx;
  border-top: 1px dashed #00000031;
  display: flex;
  justify-content:center ;
  align-items: center;
  color:rgba(0, 0, 0, 0.61);
}
@media (prefers-color-scheme: dark) {
  .flex-item_title{
    filter: invert(100%) !important;
  }
  .flex-item_title{
    filter: invert(100%) !important;
  }
  .flex-item{
    background-color:rgba(224, 224, 224, 0.651);
  }
  .flex-item_gapDays{
    background-color:rgba(224, 224, 224, 0);
  }
}




