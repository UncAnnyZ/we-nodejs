/* pages/calendar/calendar.wxss */
@import "weui.wxss";

page {
  background-color: #eeeeee;
}

.page {
  margin-top: 30rpx;
  padding-bottom: 1rpx;
}
.page__hd {
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 20rpx 35rpx 0 35rpx;
}

.page__title {
  color: rgb(0, 0, 0);
  margin-left: 30rpx;
  margin-bottom: 5px;
  text-align: left;
  font-size: 20px;
  font-weight: 400;
}
.page__desc {
  color: rgb(97, 97, 97);
  text-align: left;
  font-size: 30rpx;
  margin-left: 30rpx;
}

.touch{
  padding-left: 20rpx;
}
.touch-container{
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  font-size: 16px;
  overflow: hidden;
}

.touch-item {
  display: flex;
  justify-content: space-around;
  height: 110rpx;
  width: 100%;

  color: #fff;
  background-color: rgba(248, 248, 248, 0.9);
  
  box-shadow: 0 9rpx 9rpx #d1cece;
  border-radius: 22rpx;
  overflow: hidden;

  transition: all 0.4s;
  transform: translateX(90px);
  margin-left: -90px;
}
.weui-item__title {
  width: 300rpx;
  margin-left: 30rpx;
  color: #444444;
  font-size: 40rpx;
  overflow: hidden;
  display: -webkit-box; /*设置为弹性盒子*/ 
  -webkit-line-clamp: 1; /*最多显示1行*/ 
  overflow: hidden; /*超出隐藏*/ 
  text-overflow: ellipsis; /*超出显示为省略号*/ 
  -webkit-box-orient: vertical

}
.weui-item__desc {
  color: #686868;
  font-size: 28rpx;
  margin-left: 22rpx;
  padding: 6rpx;
}

.gapDays{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  height: 110rpx;
  font-size: 62rpx;
  color: #ffff;
  text-align: center;
}
.gapDays text{
  flex: 1;
}
.gapDays_bg1{
  text-shadow: -1px -1px 1px #865204f3 !important;  
  background-color: #fd9801e1 !important;
}
.gapDays_bg2{
  text-shadow: -1px -1px 1px #294161 !important;
  background-color: #5685c2c2 !important;
}

.Days {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 110rpx;
  width: 115rpx;
}
.Days text {
  font-size: 38rpx;
  color: #ffff;
}



