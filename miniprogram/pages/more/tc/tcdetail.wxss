/* pages/more/tc/tcdetail.wxss */

.all{


}


.block{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: 50rpx 0;
}

.title{
  text-align: center;
  padding-bottom: 10rpx;
}

.table{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border: grey 1rpx solid;
  width: 600rpx;
}
.table_head{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border: grey 1rpx solid;
  width: 100%;
}
.table_head text{
  border-right: grey 1rpx solid;
  text-align: center;
  flex: 1;
}
.table_head text:last-child{
  border-right: none;
}

.table_contain{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 100%;
  text-align: center;
}

.table_column{
  flex: 1;
  border-right: grey 1rpx solid;
}
.table_column:last-of-type{
  border-right: none;
}
.table_column view{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-bottom: grey 1rpx solid;
}
.table_column view:last-child{
  border-bottom: none;
}


.table_grade{
  flex: 1;
}
.table_grade{
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: grey 1rpx solid;
}
.table_grade view:last-child{
  border-bottom: none;
}